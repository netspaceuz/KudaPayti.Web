                </div>
                <h5 class="text-dark mt-2"><span class="text-primary">Description:  </span>@Model.Item1.Description</h5>
               
                <a class="m-0" href="@Model.Item1.Location_link">
                    <i class="fa fa-map-marker-alt text-primary mr-2"></i>
                    <font _mstmutation="1" _msttexthash="1386697" _msthash="48">@Model.Item1.Region</font>
