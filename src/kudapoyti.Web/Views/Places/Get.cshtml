@using kudapoyti.Service.ViewModels
@model Tuple<PlaceViewModel, List<PlaceViewModel>>


@{
    Layout = "_GetLayout.cshtml";
}

<section class="cinema">
    <div class="container">
        <div class="cinema-content" style="display: flex; column-gap: 10px;">
            <div class="cinema-content__left" style="width: 70%;">
                <div>
                    <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;" _msttexthash="1849640" _msthash="30">@Model.Item1.PlaceSiteUrl</h6>
                    <h2>@Model.Item1.Title</h2>
                    <img class="img-fluid" src="~/@Model.Item1.ImageUrl" width="704" height="467" style="display: inline-block; width: 100%;">
                </div>
                <div class="container">
                    <dib class="row">
                        <div b-0vlayvk2yn="" class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
                            <font b-0vlayvk2yn="" class="d-inline-flex align-items-center">
                                <h6>Published: @Model.Item1.CreatedAt</h6>
                            </font>
                        </div>
                        <font class="col-lg-6 text-center text-lg-right">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" /> 
                             </svg>
                             @Model.Item1.rank
                        </font>
                    </dib>
                </div>
                <h5 class="text-dark mt-2"><span class="text-primary">Description:  </span>@Model.Item1.Description</h5>
               
                <a class="m-0" href="@Model.Item1.Location_link">
                    <i class="fa fa-map-marker-alt text-primary mr-2"></i>
                    <font _mstmutation="1" _msttexthash="1386697" _msthash="48">@Model.Item1.Region</font>
                </a>
                
                <div class="m-0">
                    
                    <font _mstmutation="1" _msttexthash="1386697" _msthash="48">улица Бобура, 174, Шайхантахурский район</font>
                </div>
                <h5 class="mt-5"> Зарегистрируйтесь, чтобы написать комментарий!</h5>
                <form class="col-lg-5 text-center text-lg-left  mb-lg-2" style="padding: 2px 20px; border-radius: 10px">
                    <div class="form-group" >
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username" style="border-radius: 15px">
                    </div>
                    
                </form>
                <div class="form-outline mb-2">
                    <textarea class="form-control" id="textAreaExample6" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-3" style="border-radius: 20px">
                    Send
                </button>
                <div>
                    <div class="rating-stars">
                        <input type="radio" name="rating" id="rs0" checked><label for="rs0"></label>
                        <input type="radio" name="rating" id="rs1"><label for="rs1"></label>
                        <input type="radio" name="rating" id="rs2"><label for="rs2"></label>
                        <input type="radio" name="rating" id="rs3"><label for="rs3"></label>
                        <input type="radio" name="rating" id="rs4"><label for="rs4"></label>
                        <input type="radio" name="rating" id="rs5"><label for="rs5"></label>
                        <span class="rating-counter"></span>
                    </div>
                </div>
               


            </div>
            <ul class="cinema-content__recommend-list" style="flex-grow: 1; list-style: none; padding-top: 70px; padding-left: 0;">
                @{
                    foreach (var type in Model.Item2)
                    {
                        if (type.Id != Model.Item1.Id)
                        {
                            <a asp-controller="places" asp-action="get" asp-route-placeId="@type.Id">
                                <li class="list__item" style="display:flex; width: 100%; min-height: 220px; position: relative; border-radius: 10px; overflow: hidden;">
                                    <img src="/@type.ImageUrl" alt="img" style="display: inline-block; width: 100%; position: absolute; z-index: -1;">
                                    <div class="destination-overlay text-white text-decoration-none text-center" href="">
                                        <h5 class="text-white">@type.Title</h5>
                                    </div>
                                </li>
                            </a>
                        }
                   }
               }
           </ul>
        </div>
    </div>
</section>   



