                        <small id="emailHelp" class="form-text text-muted">Email-ingizga xabar jo'natildi'</small>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        <small id="emailHelp" class="form-text text-muted">Emailda kelgan Passwordni kiriting</small>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <div class="form-outline mb-4">
                    <label class="form-label" for="textAreaExample6">Message</label>
                    <textarea class="form-control" id="textAreaExample6" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-4">
                    Send
                </button>
            </div>
            <ul class="cinema-content__recommend-list" style="flex-grow: 1; list-style: none; padding-top: 70px; padding-left: 0;">
                @{
                    foreach (var type in Model.Item2)
                    {
                        if (type.Id != Model.Item1.Id)
                        {
                            <li class="list__item" style="display:flex; width: 100%; min-height: 220px; position: relative; border-radius: 10px; overflow: hidden;">
                                <img src="/@type.ImageUrl" alt="img" style="display: inline-block; width: 100%; position: absolute; z-index: -1;">
                                    <h3 style="">Cinema</h3>
                                </li>
                        }
                   }
