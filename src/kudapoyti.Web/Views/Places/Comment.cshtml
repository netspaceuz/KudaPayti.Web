@using kudapoyti.Service.Common.Utils
@using kudapoyti.Service.Dtos.CommentDtos
@model  CommentCreateDto
@{
    Layout = "_GetLayout.cshtml";
}
<style>

    .wrppr {
        padding: 10px 50px 20px;
        border-radius: 50px;
        background-color: rgba(240, 255, 255, .5);
    }
</style>
<div class="wrppr">
        <h2 class="text-uppercase text-center mb-4">Comment</h2>
        <form asp-controller="Places" asp-action="create" asp-route-PlaceId="@Model.PlaceId" method="post">
            <div class="form-outline">
                <input type="text" asp-for=UserName class="form-control form-control-md" placeholder="Enter your fullname" style="border-radius: 20px; width:30%" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-outline mb-2">
            <textarea class="form-control text-dark" asp-for=Comments id="textAreaExample6" rows="3" placeholder="comment" style="border-radius: 15px"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="mt-3">
            <input type="submit" class="btn btn-success" style="width:100%; border-radius: 20px" value="Comment"  />
            </div>

            <a class="btn btn-primary btn-block mt-3 " asp-controller="places" asp-action="@Model.PlaceId" style="border-radius: 20px">
                Exit
            </a>
        </form> 
</div>
